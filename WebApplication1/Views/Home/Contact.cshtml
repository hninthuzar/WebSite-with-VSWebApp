    <div class="main_border_box">
        <form action="EmailInfo" method="post">
            <div class="col-sm-6">
                <div class="card-box ribbon-box">
                    <div class="row-sm small_item">
                        <label class="col-sm-5 "><b>Name :</b></label>
                        <div class="col-sm-7">
                            <input type="text" id="bs" name="name" class="col-sm-12 form-control" placeholder="Enter Your Name" />
                        </div>
                    </div>
                    <div class="row-sm small_item">
                        <label class="col-sm-5"><b>Email :</b></label>
                        <div class="col-sm-7">
                            <input type="email" id="bs" name="email" class="col-sm-12 form-control " required="" placeholder="john@deo.com" />
                        </div>
                    </div>
                    <div class="row-sm small_item">
                        <label class="col-sm-5 "><b>Phone Number :</b></label>
                        <div class="col-sm-7">
                            <input type="text" id="bs" name="phoneno" class="col-sm-12 form-control " placeholder="Enter Your Phone Number" />
                        </div>
                    </div>
                    <div class="row-sm small_item">
                        <label class="col-sm-5"><b>Subject :</b></label>
                        <div class="col-sm-7">
                            <input type="text" id="bs" name="subject" class="col-sm-12 form-control " placeholder="Enter Your Subject" />
                        </div>
                    </div>
                    <div class="row-sm small_item">
                        <label class="col-sm-5 "><b>Message :</b></label>
                        <div class="col-sm-7">
                            <input type="text" id="bs" name="message" class="col-sm-12 form-control " placeholder="Enter Your Message" />
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-info">
                            Send
                        </button>
                    </div>
                </div>
            </div>
        </form>
